html
  head
    title= 'My Mern app'
  body
  h1= 'Add a vision.'
  <form action="/visions" method="POST">
    <input type="text" placeholder="name" name="name">
    <input type="text" placeholder="vision" name="vision">
    <button type="submit">Submit</button>
  </form>
  each vision in visions
    li
      span= vision.name 
      span= ': '
      span= vision.vision
 
  <script src='/main.js'></script>
</body>
</html>